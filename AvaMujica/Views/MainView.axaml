<UserControl
    x:Class="AvaMujica.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="using:AvaMujica.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:AvaMujica.Views"
    xmlns:vm="using:AvaMujica.ViewModels"
    d:DesignHeight="900"
    d:DesignWidth="405"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <Thickness x:Key="SiderBorderThickness">1.5</Thickness>
        <x:Double x:Key="ButtonSize">30</x:Double>
        <x:Double x:Key="IconSize">15</x:Double>
        <Thickness x:Key="ButtonBorderThickness">1.5</Thickness>
    </UserControl.Resources>

    <Grid>
        <SplitView
            Name="Sider"
            BorderBrush="White"
            BorderThickness="{StaticResource SiderBorderThickness}"
            CompactPaneLength="0"
            DisplayMode="Overlay"
            IsPaneOpen="{Binding IsSiderOpen}"
            OpenPaneLength="270">
            <!--  侧边栏  -->
            <SplitView.Pane>
                <Panel>
                    <ExperimentalAcrylicBorder IsHitTestVisible="False">
                        <ExperimentalAcrylicBorder.Material>
                            <ExperimentalAcrylicMaterial
                                BackgroundSource="Digger"
                                MaterialOpacity="0.6"
                                TintColor="{DynamicResource SystemAltHighColor}"
                                TintOpacity="0.8" />
                        </ExperimentalAcrylicBorder.Material>
                    </ExperimentalAcrylicBorder>
                    <views:SiderView DataContext="{Binding SiderViewModel}" />
                </Panel>
            </SplitView.Pane>

            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!--  顶部区域  -->
                        <RowDefinition Height="*" />
                        <!--  主内容区域  -->
                        <RowDefinition Height="Auto" />
                        <!--  底部导航区域  -->
                    </Grid.RowDefinitions>

                    <!--  顶部区域 - 只包含菜单按钮和新建对话按钮  -->
                    <Grid Grid.Row="0">
                        <DockPanel Background="Transparent">
                            <!--  顶部.左侧 菜单按钮  -->
                            <Button
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Command="{Binding ToggleSiderCommand}"
                                DockPanel.Dock="Left">
                                <PathIcon Data="{StaticResource text_align_left_regular}" />
                            </Button>

                            <!--  顶部.右侧 新建对话按钮  -->
                            <Button
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Command="{Binding CreateNewChatCommand}"
                                DockPanel.Dock="Right"
                                IsVisible="{Binding IsConsultationModuleSelected}">
                                <PathIcon Data="{StaticResource add_square_regular}" />
                            </Button>

                            <!--  顶部.中间 标题  -->
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                IsVisible="{Binding IsConsultationModuleSelected}"
                                Text="{Binding CurrentChat.ChatTitle}" />
                        </DockPanel>
                    </Grid>

                    <!--  主内容区域 - 包含功能模块  -->
                    <Grid Grid.Row="1">
                        <!--  心理咨询模块  -->
                        <Grid IsVisible="{Binding IsConsultationModuleSelected}">
                            <ContentControl IsVisible="{Binding !IsSettingsViewVisible}">
                                <!--  聊天视图  -->
                                <views:ChatView DataContext="{Binding CurrentChat}" />
                            </ContentControl>

                            <!--  设置视图  -->
                            <Grid IsVisible="{Binding IsSettingsViewVisible}">
                                <views:SettingsView DataContext="{Binding SettingsViewModel}" />
                            </Grid>
                        </Grid>

                        <!--  心理评估模块  -->
                        <Grid IsVisible="{Binding IsAssessmentModuleSelected}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="心理评估模块 (开发中...)" />
                        </Grid>

                        <!--  干预方案模块  -->
                        <Grid IsVisible="{Binding IsInterventionModuleSelected}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="干预方案模块 (开发中...)" />
                        </Grid>
                    </Grid>

                    <!--  底部导航区域  -->
                    <Border
                        Grid.Row="2"
                        Padding="5"
                        Background="{DynamicResource SystemChromeLowColor}"
                        BorderBrush="{DynamicResource SystemBaseLowColor}"
                        BorderThickness="0,1,0,0">
                        <Grid>
                            <UniformGrid Columns="3" Rows="1">
                                <!--  心理咨询按钮  -->
                                <RadioButton
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    GroupName="ModuleNav"
                                    IsChecked="{Binding IsConsultationModuleSelected}">
                                    <StackPanel Spacing="4">
                                        <PathIcon
                                            Width="20"
                                            Height="20"
                                            HorizontalAlignment="Center"
                                            Data="{StaticResource chat_regular}" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            Text="心理咨询" />
                                    </StackPanel>
                                </RadioButton>

                                <!--  心理评估按钮  -->
                                <RadioButton
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    GroupName="ModuleNav"
                                    IsChecked="{Binding IsAssessmentModuleSelected}">
                                    <StackPanel Spacing="4">
                                        <PathIcon
                                            Width="20"
                                            Height="20"
                                            HorizontalAlignment="Center"
                                            Data="{StaticResource clipboard_text_regular}" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            Text="心理评估" />
                                    </StackPanel>
                                </RadioButton>

                                <!--  干预方案按钮  -->
                                <RadioButton
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    GroupName="ModuleNav"
                                    IsChecked="{Binding IsInterventionModuleSelected}">
                                    <StackPanel Spacing="4">
                                        <PathIcon
                                            Width="20"
                                            Height="20"
                                            HorizontalAlignment="Center"
                                            Data="{StaticResource book_regular}" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            Text="干预方案" />
                                    </StackPanel>
                                </RadioButton>
                            </UniformGrid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </SplitView>
    </Grid>
</UserControl>
