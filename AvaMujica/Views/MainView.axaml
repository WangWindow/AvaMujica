<UserControl
    x:Class="AvaMujica.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="using:AvaMujica.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:AvaMujica.Views"
    xmlns:vm="using:AvaMujica.ViewModels"
    d:DesignHeight="900"
    d:DesignWidth="405"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <Thickness x:Key="SiderBorderThickness">1.5</Thickness>
        <x:Double x:Key="ButtonSize">30</x:Double>
        <x:Double x:Key="IconSize">15</x:Double>
        <Thickness x:Key="ButtonBorderThickness">1.5</Thickness>
    </UserControl.Resources>

    <UserControl.Styles>
        <!--  导航标签样式 - 移除圆圈并添加下划线效果  -->
        <Style Selector="RadioButton.NavTab">
            <!--  基本样式 - 隐藏默认RadioButton样式  -->
            <Setter Property="Template">
                <ControlTemplate>
                    <Border
                        Padding="{TemplateBinding Padding}"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0,0,0,2">
                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}" />
                    </Border>
                </ControlTemplate>
            </Setter>
            <Setter Property="Foreground" Value="{DynamicResource SystemBaseHighColor}" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!--  鼠标悬停效果  -->
        <Style Selector="RadioButton.NavTab:pointerover /template/ Border">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorLight2}" />
        </Style>

        <!--  选中效果  -->
        <Style Selector="RadioButton.NavTab:checked /template/ Border">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
        </Style>

        <Style Selector="RadioButton.NavTab:checked">
            <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}" />
        </Style>
    </UserControl.Styles>

    <Grid>
        <SplitView
            Name="Sider"
            BorderBrush="White"
            BorderThickness="{StaticResource SiderBorderThickness}"
            CompactPaneLength="0"
            DisplayMode="Overlay"
            IsPaneOpen="{Binding IsSiderOpen}"
            OpenPaneLength="270">
            <!--  侧边栏  -->
            <SplitView.Pane>
                <Panel>
                    <ExperimentalAcrylicBorder IsHitTestVisible="False">
                        <ExperimentalAcrylicBorder.Material>
                            <ExperimentalAcrylicMaterial
                                BackgroundSource="Digger"
                                MaterialOpacity="0.6"
                                TintColor="{DynamicResource SystemAltHighColor}"
                                TintOpacity="0.8" />
                        </ExperimentalAcrylicBorder.Material>
                    </ExperimentalAcrylicBorder>
                    <views:SiderView DataContext="{Binding SiderViewModel}" />
                </Panel>
            </SplitView.Pane>

            <Grid>
                <!--  ...existing code...  -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!--  顶部区域  -->
                        <RowDefinition Height="*" />
                        <!--  主内容区域  -->
                    </Grid.RowDefinitions>

                    <!--  顶部区域 - 包含菜单按钮、模块导航和新建对话按钮  -->
                    <Grid Grid.Row="0">
                        <Border
                            Padding="5"
                            Background="{DynamicResource SystemChromeLowColor}"
                            BorderBrush="{DynamicResource SystemBaseLowColor}"
                            BorderThickness="0,0,0,1">
                            <Panel Background="Transparent">
                                <Panel Background="Transparent">
                                    <!--  顶部.左侧 菜单按钮  -->
                                    <Button
                                        Width="40"
                                        Height="40"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        Command="{Binding ToggleSiderCommand}">
                                        <PathIcon Data="{StaticResource text_align_left_regular}" />
                                    </Button>

                                    <!--  顶部.右侧 新建对话按钮  -->
                                    <Button
                                        Width="40"
                                        Height="40"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        Command="{Binding CreateNewChatCommand}"
                                        IsVisible="{Binding IsConsultationModuleSelected}">
                                        <PathIcon Data="{StaticResource add_square_regular}" />
                                    </Button>
                                </Panel>

                                <!--  顶部.中间 导航选项卡  -->
                                <Grid HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <!--  心理咨询按钮  -->
                                        <RadioButton
                                            Padding="8,2"
                                            VerticalAlignment="Center"
                                            Classes="NavTab"
                                            GroupName="ModuleNav"
                                            IsChecked="{Binding IsConsultationModuleSelected}">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <PathIcon
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource chat_regular}" />
                                                <TextBlock FontSize="12" Text="心理咨询" />
                                            </StackPanel>
                                        </RadioButton>

                                        <!--  心理评估按钮  -->
                                        <RadioButton
                                            Padding="8,2"
                                            VerticalAlignment="Center"
                                            Classes="NavTab"
                                            GroupName="ModuleNav"
                                            IsChecked="{Binding IsAssessmentModuleSelected}">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <PathIcon
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource clipboard_text_regular}" />
                                                <TextBlock FontSize="12" Text="心理评估" />
                                            </StackPanel>
                                        </RadioButton>

                                        <!--  干预方案按钮  -->
                                        <RadioButton
                                            Padding="8,2"
                                            VerticalAlignment="Center"
                                            Classes="NavTab"
                                            GroupName="ModuleNav"
                                            IsChecked="{Binding IsInterventionModuleSelected}">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <PathIcon
                                                    Width="16"
                                                    Height="16"
                                                    Data="{StaticResource book_regular}" />
                                                <TextBlock FontSize="12" Text="干预方案" />
                                            </StackPanel>
                                        </RadioButton>
                                    </StackPanel>
                                </Grid>
                            </Panel>
                        </Border>
                    </Grid>

                    <!--  主内容区域 - 包含功能模块  -->
                    <Grid Grid.Row="1">
                        <!--  心理咨询模块  -->
                        <Grid IsVisible="{Binding IsConsultationModuleSelected}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <!--  对话标题区域  -->
                                <RowDefinition Height="*" />
                                <!--  聊天内容区域  -->
                            </Grid.RowDefinitions>

                            <!--  对话名称/标题区域  -->
                            <Border
                                Grid.Row="0"
                                Padding="10,5"
                                Background="{DynamicResource SystemChromeMediumLowColor}"
                                BorderBrush="{DynamicResource SystemBaseLowColor}"
                                BorderThickness="0,0,0,1">
                                <Grid>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Text="{Binding CurrentChat.ChatTitle}" />
                                </Grid>
                            </Border>

                            <!--  聊天内容区域  -->
                            <Grid Grid.Row="1">
                                <ContentControl IsVisible="{Binding !IsSettingsViewVisible}">
                                    <!--  聊天视图  -->
                                    <views:ChatView DataContext="{Binding CurrentChat}" />
                                </ContentControl>

                                <!--  设置视图  -->
                                <Grid IsVisible="{Binding IsSettingsViewVisible}">
                                    <views:SettingsView DataContext="{Binding SettingsViewModel}" />
                                </Grid>
                            </Grid>
                        </Grid>

                        <!--  心理评估模块  -->
                        <Grid IsVisible="{Binding IsAssessmentModuleSelected}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="心理评估模块 (开发中...)" />
                        </Grid>

                        <!--  干预方案模块  -->
                        <Grid IsVisible="{Binding IsInterventionModuleSelected}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="干预方案模块 (开发中...)" />
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </SplitView>
    </Grid>
</UserControl>
