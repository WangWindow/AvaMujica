<UserControl
    x:Class="AvaMujica.Views.AssessmentView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AvaMujica.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="900"
    x:DataType="vm:AssessmentViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:AssessmentViewModel />
    </Design.DataContext>

    <Grid Margin="10" RowDefinitions="Auto,*,Auto">
        <!--  顶部选择量表  -->
        <StackPanel
            Margin="0,0,0,8"
            Orientation="Horizontal"
            Spacing="8">
            <ComboBox
                Width="260"
                DisplayMemberBinding="{Binding Name}"
                ItemsSource="{Binding Scales}"
                SelectedItem="{Binding SelectedScale}" />
            <TextBlock VerticalAlignment="Center" Text="{Binding SelectedScale.Description}" />
        </StackPanel>

        <!--  问卷主体  -->
        <Border
            Grid.Row="1"
            Padding="16"
            BorderBrush="{DynamicResource SystemBaseLowColor}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid>
                <!--  正在答题  -->
                <Grid IsVisible="{Binding !IsCompleted}">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="{Binding CurrentQuestion.Text}" />
                        <ListBox ItemsSource="{Binding CurrentQuestion.Options}" SelectedIndex="{Binding SelectedOptionIndex, Mode=TwoWay}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Text}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Command="{Binding PrevCommand}" Content="上一题" />
                            <Button Command="{Binding NextCommand}" Content="下一题" />
                            <Button Command="{Binding SubmitCommand}" Content="提交" />
                            <TextBlock Text="{Binding CurrentIndex}" />
                            <TextBlock Text="/" />
                            <TextBlock Text="{Binding TotalQuestions}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!--  完成后显示结果  -->
                <Grid IsVisible="{Binding IsCompleted}">
                    <StackPanel Spacing="12">
                        <TextBlock
                            FontSize="20"
                            FontWeight="Bold"
                            Text="评估结果" />
                        <TextBlock Text="{Binding Result.ScaleName}" />
                        <TextBlock Text="{Binding Result.TotalScore, StringFormat=总分：{0}}" />
                        <TextBlock Text="{Binding Result.Level, StringFormat=等级：{0}}" />
                        <TextBlock Text="{Binding Result.Advice, StringFormat=建议：{0}}" TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!--  题目切换  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,8,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="8">
            <TextBlock Text="题目" />
            <TextBlock Text="{Binding CurrentIndex}" />
            <TextBlock Text="/" />
            <TextBlock Text="{Binding TotalQuestions}" />
        </StackPanel>
    </Grid>
</UserControl>
