<UserControl
    x:Class="AvaMujica.Views.SiderView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AvaMujica"
    xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AvaMujica.Models"
    xmlns:vm="using:AvaMujica.ViewModels"
    d:DesignHeight="900"
    d:DesignWidth="400"
    x:DataType="vm:SiderViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:SiderViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">

        <!--  顶部  -->
        <Grid Grid.Row="0">
            <Panel>
                <!--  顶部.右侧  -->
                <Button
                    Margin="0,0,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent">
                    <materialIcons:MaterialIcon Kind="FormatAlignRight" />
                </Button>
            </Panel>

            <Panel>
                <!--  顶部.中间  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="我的对话" />
            </Panel>
        </Grid>

        <!--  中间  -->
        <Grid Grid.Row="1">
            <ScrollViewer>
                <StackPanel Margin="10,0">
                    <!--  会话类型选择  -->
                    <ComboBox
                        Margin="5,10"
                        HorizontalAlignment="Stretch"
                        SelectedIndex="0"
                        SelectedItem="{Binding SelectedSessionType}">
                        <ComboBoxItem Content="{x:Static models:SessionType.PsychologicalConsultation}" />
                        <ComboBoxItem Content="{x:Static models:SessionType.PsychologicalAssessment}" />
                        <ComboBoxItem Content="{x:Static models:SessionType.InterventionPlan}" />
                    </ComboBox>

                    <!--  分组历史记录  -->
                    <ItemsControl Name="HistoryItems" ItemsSource="{Binding ChatSessionGroups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!--  时间分组标题  -->
                                <StackPanel Margin="0,5,0,10">
                                    <TextBlock
                                        Margin="5,0,0,5"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="{DynamicResource SystemAccentColor}"
                                        Text="{Binding Key}" />

                                    <!--  分组内的历史记录项  -->
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <!--  历史记录项  -->
                                                <Button
                                                    Margin="0,2"
                                                    Padding="8,6"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"
                                                    HorizontalContentAlignment="Stretch"
                                                    Background="Transparent"
                                                    Command="{Binding $parent[UserControl].((vm:SiderViewModel)DataContext).SelectChatSessionCommand}"
                                                    CommandParameter="{Binding}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <materialIcons:MaterialIcon
                                                            Grid.Column="0"
                                                            Width="14"
                                                            Height="14"
                                                            Margin="0,0,8,0"
                                                            Kind="ChatOutline" />

                                                        <TextBlock
                                                            Grid.Column="1"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Text="{Binding Title}"
                                                            TextTrimming="CharacterEllipsis" />

                                                        <TextBlock
                                                            Grid.Column="2"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            Foreground="{DynamicResource SystemBaseMediumColor}"
                                                            Text="{Binding UpdatedTime}" />
                                                    </Grid>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  新建会话按钮  -->
                    <Button
                        Margin="5,10"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Command="{Binding CreateNewChatCommand}"
                        Foreground="{DynamicResource SystemAccentColor}">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <materialIcons:MaterialIcon
                                Width="14"
                                Height="14"
                                Kind="Plus" />
                            <TextBlock Text="新建会话" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  底部  -->
        <Grid Grid.Row="2" Margin="10,5,10,10">
            <Button
                Padding="10,8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding OpenSettingsCommand}"
                CornerRadius="4">
                <DockPanel HorizontalAlignment="Stretch" LastChildFill="False">
                    <StackPanel
                        DockPanel.Dock="Left"
                        Orientation="Horizontal"
                        Spacing="8">
                        <materialIcons:MaterialIcon
                            Width="16"
                            Height="16"
                            VerticalAlignment="Center"
                            Kind="AccountOutline" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="用户" />
                    </StackPanel>
                    <StackPanel
                        DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        Spacing="4">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="{DynamicResource SystemBaseMediumColor}"
                            Text="设置" />
                        <materialIcons:MaterialIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource SystemBaseMediumColor}"
                            Kind="CogOutline" />
                    </StackPanel>
                </DockPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
