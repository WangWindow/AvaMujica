<UserControl
    x:Class="AvaMujica.Views.SiderView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AvaMujica.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="270"
    x:DataType="vm:SiderViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:SiderViewModel />
    </Design.DataContext>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  顶部  -->
        <Grid Grid.Row="0">
            <Panel>
                <!--  顶部.右侧  -->
                <Button
                    Margin="0,0,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent">
                    <PathIcon Data="{StaticResource text_align_right_regular}" />
                </Button>
            </Panel>

            <Panel>
                <!--  顶部.中间  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Text="菜单" />
            </Panel>
        </Grid>

        <!--  中间  -->
        <Grid Grid.Row="1">
            <ScrollViewer>
                <StackPanel Margin="10,0">
                    <!--  历史记录标题  -->
                    <TextBlock
                        Margin="5,10,0,15"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="History" />

                    <!--  分组历史记录  -->
                    <ItemsControl ItemsSource="{Binding GroupedHistoryItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!--  时间分组标题  -->
                                <StackPanel Margin="0,5,0,10">
                                    <TextBlock
                                        Margin="5,0,0,5"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="{DynamicResource SystemAccentColor}"
                                        Text="{Binding Key}" />

                                    <!--  分组内的历史记录项  -->
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button
                                                    Margin="0,2"
                                                    Padding="8,6"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"
                                                    HorizontalContentAlignment="Stretch"
                                                    Background="Transparent">
                                                    <Grid>
                                                        <TextBlock
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Text="{Binding Title}"
                                                            TextTrimming="CharacterEllipsis" />
                                                        <TextBlock
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            Foreground="{DynamicResource SystemBaseMediumColor}"
                                                            Text="{Binding FormattedTime}" />
                                                    </Grid>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  底部  -->
        <Grid Grid.Row="2" Margin="10,5,10,10">
            <Button
                Padding="10,8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                CornerRadius="4">
                <DockPanel HorizontalAlignment="Stretch" LastChildFill="False">
                    <StackPanel
                        DockPanel.Dock="Left"
                        Orientation="Horizontal"
                        Spacing="8">
                        <PathIcon
                            Width="16"
                            Height="16"
                            VerticalAlignment="Center"
                            Data="{StaticResource person_regular}" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="用户" />
                    </StackPanel>
                    <StackPanel
                        DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        Spacing="4">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="{DynamicResource SystemBaseMediumColor}"
                            Text="设置" />
                        <PathIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Data="{StaticResource settings_regular}"
                            Foreground="{DynamicResource SystemBaseMediumColor}" />
                    </StackPanel>
                </DockPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
