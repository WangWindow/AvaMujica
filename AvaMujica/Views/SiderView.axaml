<UserControl
    d:DesignHeight="900"
    d:DesignWidth="400"
    mc:Ignorable="d"
    x:Class="AvaMujica.Views.SiderView"
    x:DataType="vm:SiderViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AvaMujica"
    xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AvaMujica.Models"
    xmlns:vm="using:AvaMujica.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <vm:SiderViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">

        <!--  顶部  -->
        <Grid Grid.Row="0">
            <Panel>
                <!--  顶部.右侧  -->
                <Button
                    Background="Transparent"
                    HorizontalAlignment="Right"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center">
                    <materialIcons:MaterialIcon Kind="FormatAlignRight" />
                </Button>
            </Panel>

            <Panel>
                <!--  顶部.中间  -->
                <TextBlock
                    Background="Transparent"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"
                    Text="我的对话"
                    VerticalAlignment="Center" />
            </Panel>
        </Grid>

        <!--  中间  -->
        <Grid Grid.Row="1">
            <ScrollViewer>
                <StackPanel Margin="10,0">
                    <!--  会话类型选择  -->
                    <ComboBox
                        HorizontalAlignment="Stretch"
                        Margin="5,10"
                        SelectedIndex="0"
                        SelectedItem="{Binding SelectedSessionType}">
                        <ComboBoxItem Content="{x:Static models:SessionType.Chat}" />
                        <ComboBoxItem Content="{x:Static models:SessionType.Measure}" />
                        <ComboBoxItem Content="{x:Static models:SessionType.Plan}" />
                    </ComboBox>

                    <!--  分组历史记录  -->
                    <ItemsControl ItemsSource="{Binding ChatSessionGroups}" Name="HistoryItems">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!--  时间分组标题  -->
                                <StackPanel Margin="0,5,0,10">
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="{DynamicResource SystemAccentColor}"
                                        Margin="5,0,0,5"
                                        Text="{Binding Key}" />

                                    <!--  分组内的历史记录项  -->
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <!--  历史记录项  -->
                                                <Button
                                                    Background="Transparent"
                                                    Command="{Binding $parent[UserControl].((vm:SiderViewModel)DataContext).SelectChatSessionCommand}"
                                                    CommandParameter="{Binding}"
                                                    HorizontalAlignment="Stretch"
                                                    HorizontalContentAlignment="Stretch"
                                                    Margin="0,2"
                                                    Padding="8,6"
                                                    VerticalAlignment="Center">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <materialIcons:MaterialIcon
                                                            Grid.Column="0"
                                                            Height="14"
                                                            Kind="ChatOutline"
                                                            Margin="0,0,8,0"
                                                            Width="14" />

                                                        <TextBlock
                                                            Grid.Column="1"
                                                            HorizontalAlignment="Left"
                                                            Text="{Binding Title}"
                                                            TextTrimming="CharacterEllipsis"
                                                            VerticalAlignment="Center" />

                                                        <TextBlock
                                                            Foreground="{DynamicResource SystemBaseMediumColor}"
                                                            Grid.Column="2"
                                                            HorizontalAlignment="Right"
                                                            Text="{Binding UpdatedTime}"
                                                            VerticalAlignment="Center" />
                                                    </Grid>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  新建会话按钮  -->
                    <Button
                        Background="Transparent"
                        Command="{Binding CreateNewChatCommand}"
                        Foreground="{DynamicResource SystemAccentColor}"
                        HorizontalAlignment="Center"
                        Margin="5,10">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <materialIcons:MaterialIcon
                                Height="14"
                                Kind="Plus"
                                Width="14" />
                            <TextBlock Text="新建会话" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  底部  -->
        <Grid Grid.Row="2" Margin="10,5,10,10">
            <Button
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding OpenSettingsCommand}"
                CornerRadius="4"
                HorizontalAlignment="Stretch"
                Padding="10,8"
                VerticalAlignment="Center">
                <DockPanel HorizontalAlignment="Stretch" LastChildFill="False">
                    <StackPanel
                        DockPanel.Dock="Left"
                        Orientation="Horizontal"
                        Spacing="8">
                        <materialIcons:MaterialIcon
                            Height="16"
                            Kind="AccountOutline"
                            VerticalAlignment="Center"
                            Width="16" />
                        <TextBlock
                            FontSize="14"
                            Text="用户"
                            VerticalAlignment="Center" />
                    </StackPanel>
                    <StackPanel
                        DockPanel.Dock="Right"
                        Orientation="Horizontal"
                        Spacing="4">
                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource SystemBaseMediumColor}"
                            Text="设置"
                            VerticalAlignment="Center" />
                        <materialIcons:MaterialIcon
                            Foreground="{DynamicResource SystemBaseMediumColor}"
                            Height="14"
                            Kind="CogOutline"
                            VerticalAlignment="Center"
                            Width="14" />
                    </StackPanel>
                </DockPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
