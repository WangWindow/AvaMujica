<UserControl
    x:Class="AvaMujica.Views.PlanView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="using:AvaMujica.ViewModels"
    d:DesignHeight="900"
    d:DesignWidth="400"
    x:DataType="vm:PlanViewModel">
    <Design.DataContext>
        <vm:PlanViewModel />
    </Design.DataContext>

    <Grid
        x:Name="Root"
        Margin="20"
        HorizontalAlignment="Stretch"
        RowDefinitions="Auto,*,Auto">
        <!--
            顶部输入与生成（响应式）：
            - 宽屏：同一行（WrapPanel），整体居中
            - 窄屏：两行布局（输入在上、按钮在下且水平居中），整体居中
        -->
        <Grid Margin="0,0,8,8">
            <!--  宽屏：同一行（Grid * + Auto，输入框自适应拉伸）  -->
            <Grid
                x:Name="WideBar"
                HorizontalAlignment="Stretch"
                ColumnDefinitions="*,Auto">
                <TextBox
                    x:Name="WideInputBox"
                    Grid.Column="0"
                    MinWidth="240"
                    Margin="0,0,8,8"
                    HorizontalAlignment="Stretch"
                    Text="{Binding NewItemTitle, Mode=TwoWay}"
                    Watermark="添加一条待办..." />
                <StackPanel
                    x:Name="WideButtons"
                    Grid.Column="1"
                    Margin="8,0,0,8"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Button
                        Command="{Binding AddItemCommand}"
                        Content="添加"
                        IsEnabled="{Binding NewItemTitle, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                    <Button
                        Command="{Binding GenerateByAiCommand}"
                        Content="AI 生成方案"
                        IsEnabled="{Binding !IsGenerating}" />
                    <Button
                        Command="{Binding CancelGenerateCommand}"
                        Content="取消"
                        IsEnabled="{Binding IsGenerating}" />
                </StackPanel>
            </Grid>

            <!--  窄屏：两行布局  -->
            <Grid
                x:Name="NarrowBar"
                HorizontalAlignment="Stretch"
                RowDefinitions="Auto,Auto">
                <TextBox
                    Grid.Row="0"
                    MinWidth="240"
                    MaxWidth="600"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Stretch"
                    Text="{Binding NewItemTitle, Mode=TwoWay}"
                    Watermark="添加一条待办..." />
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Button
                        Command="{Binding AddItemCommand}"
                        Content="添加"
                        IsEnabled="{Binding NewItemTitle, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                    <Button
                        Command="{Binding GenerateByAiCommand}"
                        Content="AI 生成方案"
                        IsEnabled="{Binding !IsGenerating}" />
                    <Button
                        Command="{Binding CancelGenerateCommand}"
                        Content="取消"
                        IsEnabled="{Binding IsGenerating}" />
                </StackPanel>
            </Grid>
        </Grid>
        <!--  列表  -->
        <Border
            Grid.Row="1"
            Padding="8"
            BorderBrush="{DynamicResource SystemBaseLowColor}"
            BorderThickness="1"
            CornerRadius="8">
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,4" ColumnDefinitions="Auto,*,Auto">
                            <CheckBox
                                Grid.Column="0"
                                Margin="0,0,8,0"
                                IsChecked="{Binding IsDone}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="0,8,8,8"
                                VerticalAlignment="Center"
                                Text="{Binding Title}"
                                TextWrapping="Wrap" />
                            <Button
                                Grid.Column="2"
                                Command="{Binding $parent[UserControl].((vm:PlanViewModel)DataContext).RemoveItemCommand}"
                                CommandParameter="{Binding}"
                                Content="删除" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <Grid Grid.Row="2" Margin="0,8,0,8">
            <!--  加载时显示进度条  -->
            <ProgressBar
                Width="140"
                IsIndeterminate="True"
                IsVisible="{Binding IsGenerating}" />

            <!--  未加载时显示提示文字，与进度条处于同一位置，互斥显示  -->
            <TextBlock
                Foreground="{DynamicResource SystemBaseMediumColor}"
                IsVisible="{Binding !IsGenerating}"
                Text="提示：点击 AI 生成可快速获得一套建议" />
        </Grid>
    </Grid>
</UserControl>
