<UserControl
    x:Class="AvaMujica.Views.ChatView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AvaMujica"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AvaMujica.Models"
    xmlns:vm="using:AvaMujica.ViewModels"
    d:DesignHeight="900"
    d:DesignWidth="400"
    x:DataType="vm:ChatViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:ChatViewModel />
    </Design.DataContext>

    <Grid Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  对话名称/标题区域  -->
        <Border
            Grid.Row="0"
            Padding="10,5"
            Background="{DynamicResource SystemChromeMediumLowColor}"
            BorderBrush="{DynamicResource SystemBaseLowColor}"
            BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Medium"
                    Text="{Binding ChatTitle}" />
            </Grid>
        </Border>

        <!--  聊天消息区域  -->
        <Grid Grid.Row="1">
            <ScrollViewer Name="MessageScroller">
                <StackPanel>
                    <ItemsControl Name="ChatMessageList" ItemsSource="{Binding ChatMessageList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="10,5">
                                    <!--  用户消息  -->
                                    <Border
                                        Margin="50,0,5,0"
                                        Padding="10"
                                        HorizontalAlignment="Right"
                                        Background="#DCF8C6"
                                        CornerRadius="10"
                                        IsVisible="{Binding Role, Converter={StaticResource RoleToIsUserConverter}}">
                                        <StackPanel>
                                            <TextBlock
                                                Foreground="#1A1A1A"
                                                Text="{Binding Content}"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="10"
                                                Foreground="#666666"
                                                Text="{Binding SendTime, StringFormat={}{0:HH:mm}}" />
                                        </StackPanel>
                                    </Border>

                                    <!--  机器人消息  -->
                                    <Border
                                        Margin="5,0,50,0"
                                        Padding="10"
                                        HorizontalAlignment="Left"
                                        Background="White"
                                        CornerRadius="10"
                                        IsVisible="{Binding Role, Converter={StaticResource RoleToIsUserConverter}, ConverterParameter=false}">
                                        <StackPanel>
                                            <!--  加载中状态显示  -->
                                            <StackPanel
                                                Margin="0,5,0,10"
                                                HorizontalAlignment="Center"
                                                IsVisible="{Binding Converter={StaticResource MessageLoadingConverter}}">
                                                <ProgressBar
                                                    Width="100"
                                                    Height="4"
                                                    IsIndeterminate="True" />
                                                <TextBlock
                                                    Margin="0,5,0,0"
                                                    HorizontalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="#666666"
                                                    Text="思考中..." />
                                            </StackPanel>

                                            <!--  推理过程（可折叠，默认展开）  -->
                                            <Expander IsExpanded="True" IsVisible="{Binding ReasoningContent, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                <Expander.Header>
                                                    <TextBlock Foreground="#666666" Text="查看思考过程" />
                                                </Expander.Header>
                                                <TextBlock
                                                    Margin="0,5,0,0"
                                                    Foreground="#666666"
                                                    Text="{Binding ReasoningContent}"
                                                    TextWrapping="Wrap" />
                                            </Expander>

                                            <!--  最终答案  -->
                                            <TextBlock
                                                Foreground="#1A1A1A"
                                                Text="{Binding Content}"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="10"
                                                Foreground="#666666"
                                                Text="{Binding SendTime, StringFormat={}{0:HH:mm}}" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  输入区域  -->
        <Grid Name="InputArea" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  快捷操作栏  -->
            <StackPanel
                Grid.Row="0"
                Margin="5,0,5,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10">
                <Button
                    Padding="8,3"
                    Background="Transparent"
                    BorderBrush="#BBDEFB"
                    BorderThickness="1"
                    CornerRadius="15"
                    FontSize="11">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <PathIcon
                            Width="12"
                            Height="12"
                            Data="{StaticResource emoji_sad_regular}" />
                        <TextBlock Text="我感到焦虑" />
                    </StackPanel>
                </Button>
                <Button
                    Padding="8,3"
                    Background="Transparent"
                    BorderBrush="#BBDEFB"
                    BorderThickness="1"
                    CornerRadius="15"
                    FontSize="11">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <PathIcon
                            Width="12"
                            Height="12"
                            Data="{StaticResource heart_pulse_regular}" />
                        <TextBlock Text="需要放松" />
                    </StackPanel>
                </Button>
                <Button
                    Padding="8,3"
                    Background="Transparent"
                    BorderBrush="#BBDEFB"
                    BorderThickness="1"
                    CornerRadius="15"
                    FontSize="11">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <PathIcon
                            Width="12"
                            Height="12"
                            Data="{StaticResource bed_regular}" />
                        <TextBlock Text="睡眠问题" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!--  输入框与发送按钮  -->
            <DockPanel Grid.Row="1" Margin="5">
                <!--  语音输入按钮  -->
                <Button
                    Width="30"
                    Height="30"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="#BBDEFB"
                    BorderThickness="1.5"
                    CornerRadius="20"
                    DockPanel.Dock="Left">
                    <PathIcon
                        Width="15"
                        Height="15"
                        Data="{StaticResource mic_on_regular}" />
                </Button>

                <!--  发送按钮  -->
                <Button
                    Width="30"
                    Height="30"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="DodgerBlue"
                    BorderBrush="White"
                    BorderThickness="1.5"
                    Command="{Binding SendCommand}"
                    CornerRadius="20"
                    DockPanel.Dock="Right">
                    <PathIcon
                        Width="15"
                        Height="15"
                        Data="{StaticResource arrow_up_regular}" />
                </Button>

                <!--  输入框  -->
                <TextBox
                    Name="InputBox"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    CornerRadius="10"
                    DockPanel.Dock="Left"
                    Text="{Binding InputText}"
                    Watermark="输入您的心理困扰..." />
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
